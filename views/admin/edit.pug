extends layout.pug
block content
    h3.mb-4 Edit Data Mahasiswa
    form(action=`/admin/dashboard/${data.id}?_method=PUT`, method="POST")
        input(type="text", class="form-control mb-3", name="noinduk", placeholder="Masukan No Induk" value=data.noinduk)
        input(type="text", class="form-control mb-3", name="nama", placeholder="Masukan Nama" value=data.nama)
        input(type="text", class="form-control mb-3", name="prodi", placeholder="Masukan Prodi" value=data.prodi)
        input(type="text", class="form-control mb-3", name="semester", placeholder="Masukan Semester" value=data.semester)
        input(type="text", class="form-control mb-4", name="alamat", placeholder="Masukan Alamat" value=data.alamat)
        button(type="submit", class="btn btn-success") Perbaharui